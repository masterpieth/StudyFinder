<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nyk.sf.dao.BoardMapper">
	<insert id="writeBoard" parameterType="boardVO">
		insert into sf_board
		(
		board_no,
		board_title,
		board_content,
		board_inputdate,
		board_hit,
		userid,
		board_originalFileName,
		board_savedFileName,
		sb_no
		)
		values
		(
		sf_board_seq.nextval,
		#{board_title},
		#{board_content},
		sysdate,
		0,
		#{userid}
		<choose>
			<when
				test="board_originalFileName != null and board_savedFileName != null">
				,board_originalFileName
				,board_savedFileName
			</when>
			<otherwise>
				,null
				,null
			</otherwise>
		</choose>
		,sf_sb1_seq.nextval
		)
	</insert>
