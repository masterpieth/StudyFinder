	<select id="boardList" resultType="boardVO">
		select
		board_no,
		board_title,
		board_content,
		board_inputdate,
		board_hit,
		userid,
		board_originalFileName,
		board_savedFileName,
		sb_no
		from sf_board order
		by
		board_no desc
	</select>

	<select id="readBoard" parameterType="int" resultType="boardVO">
		select *
		from sf_board where sb_no = #{sb_no}
	</select>
	<delete id="deleteBoard" parameterType="int">
	delete from sf_board where sb_no = #{sb_no}
	</delete>
</mapper>
